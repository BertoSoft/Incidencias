<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Incidencias" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:statusBarColor">@color/secundario</item>

    </style>

    <style name="Theme.Incidencias" parent="Base.Theme.Incidencias" />

    <style name="Titulo">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/domine_variable_font_wght</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secundario</item>
    </style>

    <style name="Textos">
        <item name="android:fontFamily">@font/domine_variable_font_wght</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Fecha">
        <item name="android:fontFamily">@font/domine_variable_font_wght</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/secundario</item>
    </style>

    <style name="Iconos">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secundario</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/domine_variable_font_wght</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>